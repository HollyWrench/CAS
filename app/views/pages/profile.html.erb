<%# <h1>This is my profile</h1> %>

  <div class="profile-wrapper">
    <div class="item1">
      <h2 class="home-column-title">EVENT BOOKINGS:</h2>
      <%# style="width:500px" %>
      <div class="cards">
        <% @bookings.reverse[0..4].each do |booking| %>
          <% if booking.user_id == current_user.id %>
            <%= cl_image_tag booking.event.photo.key, height: 150, width: 200, crop: :fill %>
            <li class="name">
              <p><%=booking.event.name%></p>
            </li>
            <li class="info">
              <p><%=booking.event.description%></p>
            </li>
            <li class="info">
              <p><strong>LOCATION: </strong><%=booking.event.location%></p>
            </li>
            <li class="tickets">
              <p>Tickets: <%= booking.tickets_count %></p>
            </li>
            <%# <%= link_to 'Edit', edit_booking_path(booking)  %>
            <%# <%= link_to 'Delete', booking_path(booking), method: :delete, data: { confirm: "Are you sure?" } %>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="item1">
      <h2 class="home-column-title">SAVED CONTENT:</h2>
      <% @feed_items.each do |f| %>
        <div class="feed-items-card">
          <% if current_user.favorited?(f) %>
            <% if f.url %>
              <%= link_to cl_image_tag(f.photo.key), f.url, class: "profile-feed-item-photo", href: f.url, target: "blank"%>
              <div data-controller="favorite">
                <%= link_to toggle_favorite_feed_item_path(f), remote: true, method: :post, data: {action: 'click->favorite#toggleFavorite'} do %>
                  <i data-favorite-target="heart" class="fas fa-heart heart-icon heart-pos <%= 'liked' if current_user.favorited?(f) %>"></i>
                <% end %>
              </div>
            <% end %>
            <% if f.description %>
              <div class="flip-card">
                <div class="flip-card-front">
                  <%= cl_image_tag f.photo.key, height: 150, width: 200, crop: :fill, class: "profile-feed-item-photo flip-card-front"%>
                </div>
                <div class="flip-card-back">
                  <li class="feed-item-info">
                    <p><%=f.description%></p>
                  </li>
                </div>
              </div>
              <div data-controller="favorite">
                <%= link_to toggle_favorite_feed_item_path(f), remote: true, method: :post, data: {action: 'click->favorite#toggleFavorite'} do %>
                  <i data-favorite-target="heart" class="fas fa-heart heart-icon heart-pos <%= 'liked' if current_user.favorited?(f) %>"></i>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="item2">
      <h2 class="home-column-title">MY INFO:</h2>
      <ul>
        <li>
          <%= current_user.first_name %>
          <%= current_user.last_name %>
        </li>
        <li>
          <img class="avatar" src="https://res.cloudinary.com/ds2g4bsxw/image/upload/v1630602938/avatar.png" alt="profile pic">
        </li>
      </ul>
    </div>
  </div>
