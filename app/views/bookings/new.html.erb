<div class="d-flex justify-content-center">
  <div class= "center">
    <div class="bookings-card">
      <div class="center">
        <%# <h3 style="color:black;">BOOK YOUR TICKETS HERE:</h3> %>
        <%= cl_image_tag @event.photo.key, height: 150, width: 200, crop: :fill, class: "booking-image" %>
        <li class="name">
          <p><%=@event.name%></p>
        </li>
        <li class="info">
          <p><%=@event.description%></p>
        </li>
        <li class="info">
          <p><strong>LOCATION: </strong><%=@event.location%></p>
        </li>
        <li class="info">
          <p><strong>DATE: </strong><%=@event.date.strftime("%b %d, %Y") %></p>
        </li>
        <br>
        <%= simple_form_for([@event, @booking]) do |f| %>
          <%# <%= f.input :name %>
          <%# <%= f.input :description %>
          <%# <%= f.input :location %>
          <%# <%= f.input :start_date, as: :date %>
          <%= f.input :tickets_count, label: false%>
          <%= f.button :submit, class: 'book-now-button', value: "Book now" %>
        <% end %>
        <div id="price-div" data-price="<%=@event.price%>">
          Â£<%= @event.price %>0
        </div>
        <div id="map"
          style="width: 100%; height: 600px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
</div>
