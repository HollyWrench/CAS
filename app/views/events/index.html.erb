<div class="title-and-filter">
  <h2>UPCOMING EVENTS:</h2>
  <li class="nav-item dropdown">
    <%= image_tag "https://icon-library.com/images/three-bars-icon/three-bars-icon-6.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
      <p>ALL</p>
      <p>SEMINARS</p>
      <p>SOCIALS</p>
    </div>
  </li>
</div>

<div class="other-container">
  <% @events.each do |event| %>
    <div class="events-card" data-aos="flip-down" data-aos-duration=90>
      <% if event.photo.attached? %>
        <%= cl_image_tag event.photo.key, height: 150, width: 200, crop: :fill %>
      <% end %>
      <li class="name">
        <p><%=event.name%></p>
      </li>
      <li class="info">
        <p><%=event.description%></p>
      </li>
      <li class="info">
        <p><strong>LOCATION: </strong><%=event.location%></p>
      </li>
      <li class="info">
        <p><strong>PRICE: </strong><%=event.price%></p>
      </li>
      <%# <%=link_to "MORE INFO", event_path(event)%>
    </div>

  <% end %>
</div>
